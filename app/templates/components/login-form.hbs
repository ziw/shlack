<div class="flex justify-center flex-row w-full">
  <div class="w-full max-w-xs">
    <form class="bg-grey-light shadow-md rounded px-8 pt-6 pb-8 mb-4"
      {{on "submit" this.onLoginFormSubmit}}>
      <div class="inline-block relative w-64 mt-2">
        <select
          {{on "change" this.onSelectChanged}}
          class="login-form__select block appearance-none w-full bg-white border border-grey-light hover:border-grey px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline"
        >
          <option selected={{not this.userId}} value="" disabled>Select a user</option>
          {{#each @users as |user|}}
            <option selected={{eq this.userId user.id}}  value={{user.id}}>{{user.name}}</option>
          {{/each}}
        </select>
        <div
          class="pointer-events-none absolute pin-y pin-r flex items-center px-2 text-grey-darker"
        >
          <svg
            class="fill-current h-4 w-4"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
            ></path>
          </svg>
        </div>
      </div>
      <p class="text-blue text-xs italic my-4">
        A validation message {{this.userId}}
      </p>
      <div class="flex items-center justify-between">
        <input
          disabled={{this.isDisabled}}
          class="{{if this.isDisabled "bg-grey" "bg-teal-dark"}} text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          value="Sign In"
          type="submit"
        />
      </div>
    </form>
  </div>
</div>